/* appointment.wxss */
.container {
  background-color: #000;
  min-height: 100%;
  justify-content:space-between;
  align-items: center;
  border-bottom-color: #000;
}

.zan-cell {
  position: relative;
  padding: 12px 15px;
  align-items: center;
  line-height: 1.4;
}

.zan-cell::after {
  position: absolute;
  left: 15px;
  right: 0;
  bottom: 0;
  border-top: 1rpx solid #e5e5e5;
  background: #e5e5e5;
  content: ' ';
}
.zan-cell__bd {
  font-size: 30rpx;
  color: #000;
  text-align: center;
  font-weight: bold;
  margin-top:10rpx;
}
.zan-cell__ft {
  font-size: 12px;
  position: relative;
  text-align: center;
  color: #ccc;
  font-weight: bold;
}

.zan-panel {
  background: #fff;
  overflow: hidden;
  margin-bottom:30px;
  border-radius:10rpx;
  width:85%;
}
.articles{
  background-color: #fff;
}
.article__item{
  display: flex;
  padding: 30rpx;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  position: relative;
  padding-bottom: 40rpx;
}
.article__thumb{
  width:200rpx;
  height: 200rpx;
  margin-right: 0.6rem;
}
.article__image{
  width:200rpx;
  display:inline-block;
  overflow:hidden;
  height:200rpx;
  border-radius:50%;
  justify-content:center;
}
.article__info{
  flex: 1;
  width: 100%;
  overflow: hidden;
  padding-bottom:5px;
  padding-top:5px;
}
.article__title{
  font-weight: 400;
  font-size: 30rpx;
  text-overflow: ellipsis;
  width: 100%;
  margin-bottom: 20rpx;
  display:flex;
  align-items:center;
}
.article__title_font{
  flex: 1;
}

.article__desc{
  color: #999;
  font-size: 26rpx;
  line-height: 1.2;
  width: 100%;
}
.article__source{
  color:#d81e06;
  border:1rpx solid #d81e06;
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
  font-size:20rpx;
  margin-right: 20rpx;
}


.article__time{
  margin-right: 10rpx;
}
.article__count{
  float: right;
  display: flex;
  align-items: center;
  color:#333;
  font-size: 20rpx;
  font-weight: 500;
}

.article__icon{
  width: 33rpx;
  height: 20rpx;
  margin-left: 15rpx;
  margin-right: 6rpx;
}

.appointBtn{
  width: 80rpx;
  height:46rpx;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  background-color: #000;
}

.border-radius {
  border-radius: 20px;
  position: relative;
  left: 0;
  top: 0;
  color: #fff;
}
.appointFont{
  padding: 8rpx 0;
}
.footaboutme {
  background-color: #000;
  text-align: center;
  color: #aaa;
  font-size: 10px;
}