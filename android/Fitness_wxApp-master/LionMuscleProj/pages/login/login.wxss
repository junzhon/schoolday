/* pages/login/login.wxss */
.container{
  position: fixed;
  top:0;
  width:100%;
  height:100%;
  z-index:9;
}
.container .bg{
  width:100%;
  height:100%;
  position: fixed;
  top:0;
  left:0;
  z-index:99;
}
.master{
  position: fixed;
  width:100%;
  z-index:999;
  height:100%;
  background: rgba(0, 0, 0, .6)
}
.content{
  width:80%;
  position: relative;
  z-index:9999;
  /* border:1px solid #fff; */
  float:left;
  margin:50rpx 0;
  text-align: center;
  color:#fff;
  height:500rpx;
}
.content .avatar{
  width:100%;
  height:120rpx;
  margin:40px auto;
  float:left;
}
.content .avatar image{
  width:150rpx;
  height:150rpx;
  border-radius:150rpx;
}
.content input{
  width:100%;
  float:left;
  height:80rpx;
  border-radius:5rpx;
  margin:20rpx 0;
  border:1px solid #fff;
}
.content button{
  width:100%;
float:left;
line-height:80rpx;
background: none;
border:1px solid #fff;
color:#fff;
  margin:50rpx 0;
}

.phcolor{color:rgba(255, 255, 255, .6);}