/* pages/Appointment1/Appointment1.wxss */
.container image{
  width:100%;
  height:520rpx;
  float:left;
}


.type-container{
  width: 100%;
   height:120rpx;
  background-color: #fff;
  overflow: hidden;
}
.type-navbar{
  white-space: nowrap;
  display: flex;
  height:120rpx;
  background-color: #fff;
}
.type-box{
  width:160rpx;
  box-sizing: content-box;
  font-size: 24rpx;
  /* border:1px solid red; */
  height:100rpx;
  /* line-height: 84rpx; */
  text-align: center;
  display: inline-block;
  overflow: hidden;
}

.active{
  border-bottom:4rpx solid #e64340;
  /* background: #000; */
  /* color:#fff; */
}
.type-navbar-item text{
  width:100%;
  line-height: 60rpx;
  float:left;
}
.type-navbar-item text:last-child{
  line-height:20rpx;
}

.content{
  width:92%;
  margin:0 4%;
  float:left;
  /* border:1px solid red; */
}
.content .texttip{
  width:100%;
  line-height:200rpx;
  margin: 80rpx;
  font-size: 26rpx;
  color: #aaa;
}
.content .flex-li{
  width:100%;
  line-height:100rpx;
  /* border: solid 1rpx #f4c17d; */
  box-shadow: 1rpx 2rpx 12rpx 0px 
		rgba(8, 4, 3, 0.15);
  border-radius:10rpx;
  margin:10rpx 0;
  /* padding:0 10rpx; */
  float:left;
  font-size: 26rpx;
}
.content .flex-li text{
  width:31%;
  float:left;
}

.content .flex-li .flex-time{
  padding:0 0 0 20rpx;
  width:35%;
}
.content .flex-li .flex-number{
  width:30%;
}
.content .flex-li .apt{
  display: inline-block;
  text-align: center;
  width:80rpx;
  line-height: 60rpx;
  width:20%;
  background:#000;
  margin:20rpx;
  float:right;
  color:#fff;
  border-radius:10rpx;
}